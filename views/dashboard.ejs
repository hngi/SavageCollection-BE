<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/user.css" />
    <link rel="stylesheet" href="/css/bootstrap.min.css" />

    <!-- <link rel="stylesheet" href="/css/bootstrap.min.css" /> -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.14.0/css/all.min.css"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Lato:wght@100;300;400;700;900&family=Roboto:wght@100;300;400;500;700;900&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/fonts/LemonJellyPersonalUse-dEqR.ttf" />
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
      integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk"
      crossorigin="anonymous"
    />
    <title>Savage Collections | Dashboard</title>
  </head>

  <body>
    <!-- header -->
    <header>
      <nav class="navbar navbar-expand-md navbar-dark fixed-top shadow-lg py-3">
        <!-- Brand -->
        <a class="navbar-brand" id="logo" href="./index.html">SC</a>

        <!-- Toggler/collapsibe Button -->
        <button
          class="navbar-toggler"
          type="button"
          data-toggle="collapse"
          data-target="#collapsibleNavbar"
        >
          <span class="navbar-toggler-icon"></span>
        </button>

        <!-- Navbar links -->
        <div
          class="collapse navbar-collapse justify-content-end"
          id="collapsibleNavbar"
        >
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link text-uppercase text-light" href="/">home</a>
            </li>
            <li class="nav-item">
              <a
                class="nav-link text-uppercase text-light"
                href="/user/dashboard"
                >dashboard</a
              >
            </li>
            <li class="nav-item">
              <a class="nav-link text-uppercase text-light" href="#upload"
                >upload</a
              >
            </li>
            <li class="nav-item">
              <a class="nav-link text-uppercase text-light" href="/posts"
                >views</a
              >
            </li>
            <li class="nav-item">
              <a class="nav-link text-uppercase text-light" href="/rewards"
                >reward</a
              >
            </li>
            <li class="nav-item">
              <a class="nav-link text-uppercase text-light" href="/user/logout"
                >log out</a
              >
            </li>
          </ul>
        </div>
      </nav>
    </header>
    <!-- header -->
    <!-- main -->
    <main class="mt-5">
      <div class="user">
        <div class="user-box">
          <div class="user-photo">
            <img src="/images/user-img.png" alt="user image" />
          </div>
          <div class="user-details">
            <p class="user-name">
              <span class="first"><%= user.username %> </span>
            </p>
            <p class="user-id">
              ID: <span class="id">us-<%= user._id %> </span>
            </p>
            <p class="user-email">
              Email: <span class="email"><%= user.email %></span>
            </p>
          </div>
          <div class="user-reward">
            <a href="/rewards">
              <button class="user-btn">claim reward</button></a
            >
          </div>
          <hr />
        </div>
        <div class="user-dashboard">
          <div class="user-dashboard-figures">
            <div class="user-dashboard-figure">
              <p class="title">Total Uploads</p>
              <p class="figure"><%= data.length %></p>
            </div>
            <div class="user-dashboard-figure">
              <p class="title">Total Views</p>
              <p class="figure">13</p>
            </div>
            <div class="user-dashboard-figure">
              <p class="title">Total Points</p>
              <p class="figure">8</p>
            </div>
            <div class="user-dashboard-figure">
              <p class="title">Total Value</p>
              <p class="figure">N 0.16</p>
            </div>
          </div>
        </div>
      </div>
      <div class="user-posts">
        <h1 class="heading text-uppercase text-center">your posts</h1>
        <div class="posts">
          <% for (var i = 0; i < data.length; i++) { %> <% if(data[i].image_url
          != "") { %> <% console.log(data[i].image_url) %>
          <div class="post">
            <img src="<%= data[i].image_url %>" height="250px" width="100px" />
            <div class="overlay">
              <i class="fa fa-info" title="details"></i>
              <i class="fa fa-trash" title="delete"></i>
            </div>
          </div>
          <% } %> <% } %>
        </div>
      </div>
      <br />
      <div class="pagination d-flex justify-content-center">
        <div aria-label="Page navigation">
          <ul class="pagination justify-content-center">
            <li class="page-item disabled">
              <a class="page-link" href="#" tabindex="-1">Previous</a>
            </li>
            <li class="page-item active">
              <a class="page-link" href="#"
                >1<span class="sr-only">(current)</span></a
              >
            </li>
            <li class="page-item">
              <a class="page-link" href="#">2 </a>
            </li>
            <li class="page-item">
              <a class="page-link" href="">3</a>
            </li>
            <li class="page-item">
              <a class="page-link" href="#">Next</a>
            </li>
          </ul>
        </div>
      </div>
      <div class="user-upload text-center" id="upload">
        <form action="/post/create" method="POST" enctype="multipart/form-data">
          <div class="form-group">
            <input type="file" name="image" />
          </div>
          <button type="submit" class="btn btn-lg btn-primary">
            Upload
          </button>
        </form>
      </div>
    </main>
    <!-- main -->
    <!-- footer -->
    <footer class="mt-5">
      <div
        class="text-center pt-4 pb-2 justify-content-center align-items-center"
      >
        <p class="text-uppercase text-white">Â©savage collections 2020.</p>
        <p class="text-capitalize text-white">All rights reserved.</p>
      </div>
    </footer>
    <!-- footer -->
    <!-- Bootstrap cdn -->

    <script src="/js/jquery.js"></script>
    <script src="/js/popper.js"></script>
    <!-- Custom JS -->
    <script src="/js/user.js"></script>
    <script src="/js/bootstrap.min.js"></script>
  </body>
</html>
